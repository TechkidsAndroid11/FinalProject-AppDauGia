<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.haihm.shelf.activity.AuctionDetailsActivity">
    <RelativeLayout
        android:id="@+id/rv_main_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:layout_alignParentTop="true">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:padding="8dp"/>
        <ImageView
            android:id="@+id/iv_my_avatar"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_toRightOf="@id/iv_back"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_name_auction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Auction Name"
            android:layout_centerInParent="true"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.TabLayout
            android:id="@+id/tab_aution"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"/>
        <android.support.v4.view.ViewPager
            android:id="@+id/vp_aution"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/tab_aution"/>
    </RelativeLayout>

</LinearLayout>
