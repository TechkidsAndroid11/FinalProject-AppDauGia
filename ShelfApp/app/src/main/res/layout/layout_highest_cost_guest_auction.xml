<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#cceaeaea"
    android:padding="8dp">
    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giá cao nhất: "
        android:textColor="#000"/>

    <TextView
        android:id="@+id/tv_name_buyer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_toEndOf="@+id/text"
        android:layout_toRightOf="@+id/text"
        android:text="         "
        android:textColor="#767676" />
    <TextView
        android:id="@+id/tv_current_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.000.000đ"
        android:layout_below="@id/text"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"/>
    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thời gian còn lại"
        android:layout_alignParentRight="true"
        android:textColor="#000"/>
    <TextView
        android:id="@+id/tv_time_remaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2:30:44"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingTop="5dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/text2"
        android:textColor="#000"/>
    <EditText
        android:id="@+id/et_input_cost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_current_cost"
        android:padding="8sp"
        android:maxLength="17"
        android:hint="Tăng tối thiểu ... (đ)"
        android:background="@drawable/custom_edittext_post"
        android:layout_toLeftOf="@id/iv_gavel"
        android:inputType="number"/>
    <ImageView
        android:id="@+id/iv_gavel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_gavel_black_24dp"
        android:padding="8dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_current_cost"/>
</RelativeLayout>