<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/iv_auction_image"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/ic_add_black_24dp"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical"
        android:paddingTop="@dimen/pad_def"
        android:paddingStart="8dp">

        <TextView
            android:id="@+id/tv_auction_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giày thể thao"
            android:layout_marginTop="@dimen/pad_def"
            android:textColor="@color/textColorBlack"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_auction_seller_name"
            android:text="Seller name"
            android:layout_below="@+id/tv_auction_product_name"
            android:layout_marginTop="8dp"
            />

        <ImageView
            android:id="@+id/iv_auction_time_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_access_time_black_24dp"
            android:layout_below="@+id/tv_auction_seller_name"
            android:layout_marginTop="8dp"
            />

        <TextView
            android:id="@+id/tv_auction_time_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23:00 01-01-2018"
            android:layout_below="@+id/tv_auction_seller_name"
            android:layout_toEndOf="@+id/iv_auction_time_start"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:textColor="@color/textColorBlack"
            />

        <TextView
            android:id="@+id/tv_auction_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100.000đ"
            android:layout_below="@+id/tv_auction_time_start"
            android:layout_marginTop="8dp"
            android:textColor="@color/textColorBlack"
            android:textStyle="bold"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Join"
            android:textColor="@color/mainColor"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/tv_auction_time_start"
            android:background="@drawable/bt_auction_join"
            android:layout_marginEnd="@dimen/pad_def"/>

    </RelativeLayout>



</LinearLayout>