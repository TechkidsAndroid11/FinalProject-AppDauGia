<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_marginBottom="5dp"
    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageView
            android:id="@+id/iv_auction_image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_add_black_24dp" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:paddingTop="@dimen/pad_def">

            <TextView
                android:textSize="18sp"
                android:textStyle="bold"
                android:id="@+id/tv_auction_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pad_def"
                android:text="Giày thể thao"
                android:textColor="@color/textColorBlack" />

            <TextView
                android:id="@+id/tv_auction_seller_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_auction_product_name"
                android:layout_marginTop="8dp"
                android:text="Seller name" />

            <ImageView
                android:id="@+id/iv_auction_time_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_auction_seller_name"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_access_time_black_24dp" />

            <TextView
                android:id="@+id/tv_auction_time_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_auction_seller_name"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/iv_auction_time_start"
                android:text="23:00 01-01-2018"
                android:textColor="@color/textColorBlack" />

            <TextView
                android:id="@+id/tv_auction_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_auction_time_start"
                android:layout_marginTop="8dp"
                android:text="100.000đ"
                android:textColor="@color/textColorBlack"
                android:textStyle="bold" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tv_auction_time_start"
                android:layout_marginRight="@dimen/pad_def"
                android:background="@drawable/bt_auction_join"
                android:text="Join"
                android:textColor="@color/mainColor" />

        </RelativeLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>
